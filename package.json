{
  "name": "learning-nodejs",
  "version": "1.0.0",
  "description": "Node.js Backend with Hexagonal Architecture and SDD",
  "main": "dist/Infrastructure/Primary/server.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/Infrastructure/Primary/server.ts",
    "build": "tsc",
    "start": "node dist/Infrastructure/Primary/server.js",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "cucumber-js",
    "specs:generate": "spec-kit generate ./specs",
    "format": "prettier --write \"{src,tests,features,specs}/**/*.ts\"",
    "format:check": "prettier --check \"{src,tests,features,specs}/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@types/chai": "^4.3.11",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.24.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
